<head>
	<meta charset="utf-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">

	<title></title>
	<meta name="description" content="">
	<meta name="author" content="">

	<meta name="viewport" content="width=device-width,initial-scale=1">
    <link href="/css/themes/default/default.css" rel="stylesheet" />
    <link href="/css/nivo-slider.css" rel="stylesheet" />
	<link rel="stylesheet" href="/css/style.css">

	<script src="/scripts/libs/modernizr-2.0.6.min.js"></script>
    <script src="/scripts/libs/jquery-1.9.0.min.js"></script>
    <script src="/scripts/libs/jquery.nivo.slider.js"></script>
</head>
<body>

	<div id="header-container">
		<header class="wrapper clearfix">
			<h1 id="title">@Umbraco.Field("pageTitle")</h1>
			<nav>
				@Umbraco.RenderMacro("Nav")
			</nav>
			@*@Umbraco.RenderMacro("Breadcrumb")*@
		</header>
		
	</div>
	@RenderBody()
    <div id="footer-container">
		<footer class="wrapper">
			<h3>@Umbraco.Field("footerText", recursive: true)</h3>
		</footer>
	</div>
    <script src="/scripts/global.js"></script>
</body>
</html>